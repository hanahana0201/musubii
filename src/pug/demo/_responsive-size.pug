.group.is-scroll-x
  table.table.is-sm.is-center.is-nowrap.is-middle.is-border
    thead
      tr.box.is-paint
        th(width="80")
        th
          p
            i.fa.fa-mobile(aria-hidden="true")
            span.text Mobile
            br
            span.text.is-sm all
        th
          p
            i.fa.fa-mobile(aria-hidden="true")
            span.text Fablet
            br
            span.text.is-sm 576px ~
        th
          p
            i.fa.fa-tablet(aria-hidden="true")
            span.text Tablet
            br
            span.text.is-sm 768px ~
        th
          p
            i.fa.fa-desktop(aria-hidden="true")
            span.text Desktop
            br
            span.text.is-sm 992px ~
        th
          p
            i.fa.fa-desktop(aria-hidden="true")
            span.text Wide
            br
            span.text.is-sm 1200px ~
    tbody
      each val, index in { "62.5%":"xxs", "75%":"xs", "87.5%":"sm", "100%":"md", "125%":"lg", "150%":"xl", "200%":"xxl"}
        tr
          td
            p.text.is-sm
              span= index
          td
            p
              span.text .is-mobile-#{val}
          td
            p
              span.text .is-fablet-#{val}
          td
            p
              span.text .is-tablet-#{val}
          td
            p
              span.text .is-desktop-#{val}
          td
            p
              span.text .is-wide-#{val}

